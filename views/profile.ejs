<%- include('partials/header') %>

<div class="profile__section">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="profile__avatar">
					<img
						src="https://images.unsplash.com/photo-15559954-e7e7e7e7e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
						class="img-fluid"
						alt=""
					/>
				</div>
				<div class="profile__about">
					<div class="profile__about-text">
						<h3 class="profile__about-header">
							<span class="firstname"><%= user.firstName %></span>
							<span class="lastname"><%= user.lastName %></span>
						</h3>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<section id="events__section">
	<div class="container">
		<%= message %>
		<div class="row">
			<!-- card 1 -->
			<% events.forEach((event) => { %>
			<div class="col-lg-3 col-md-6 event__card">
				<div class="card">
					<img
                        class="card-img-top event__image"
                        src="/images/eventimages/<%= event.image %>"
                        alt="tech conference"
                    />
					<div class="card-body">
						<a class="card-title event__title" href="/event/<%=event.id %>">
							<%= event.title %>
						</a>
						<p class="card-subtitle event__description">
							<%= `${event.description.slice(0, 49)}......` %>
						</p>
						<p class="card-text event__metadata">
							<span class="location"> <%= event.location %> </span> <br />
							<span class="date">
								<%= event.date.toDateString() %> <br />
							</span>
							<span class="time"> <%= event.time %>, </span>
							<span class="type"> <%= event.type %> </span>
						</p>
						<p class="card-text event__price">Ghc <%= event.price %></p>
						<div class="d-grid">
							<a
								type="button"
								href="/register"
								class="btn btn-lg btn-danger text-nowrap"
							>
								Delete</a
							>
						</div>
					</div>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</section>

<%- include('partials/footer') %>
